#!/bin/sh

WRAPPER_INCLUDEDIR="${WRAPPER_INCLUDEDIR:=-I${STAGING_DIR:-/builder/shared-workdir/build/staging_dir/target-x86_64_musl}/usr/include/uClibc++/}"
WRAPPER_LIBDIR="${WRAPPER_LIBDIR:=-L${STAGING_DIR:-/builder/shared-workdir/build/staging_dir/target-x86_64_musl}/lib/}"

WRAPPER_OPTIONS=""
WRAPPER_LIBS="-lc -lgcc_s -lssp_nonshared"

WRAPPER_INCLIB="Y"
for arg
do
	case "$arg" in
	-c|-E|-S) WRAPPER_INCLIB="N" ;;
	-static) [ "$WRAPPER_LIBS" != "-lc -lgcc_s -lssp_nonshared -lgcc_eh" ] && WRAPPER_LIBS="-lc -lgcc_s -lssp_nonshared -lgcc_eh" ;;
	esac
done
if [ "$WRAPPER_INCLIB" = "Y" ]
then
	WRAPPER_OPTIONS="$WRAPPER_OPTIONS -nodefaultlibs $WRAPPER_LIBDIR -luClibc++ $WRAPPER_LIBS"
fi

[ -n "$V" ] && [ $V -gt 1 ] && echo x86_64-openwrt-linux-musl-g++ -fno-builtin -nostdinc++ -DGCC_HASCLASSVISIBILITY  $WRAPPER_INCLUDEDIR "$@" $WRAPPER_OPTIONS
exec x86_64-openwrt-linux-musl-g++ -fno-builtin -nostdinc++ -DGCC_HASCLASSVISIBILITY  $WRAPPER_INCLUDEDIR "$@" $WRAPPER_OPTIONS

